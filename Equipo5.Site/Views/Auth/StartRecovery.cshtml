@model MKT.Site.ViewModels.ViewModelRecovery

@{
    ViewBag.Title = "StartRecovery";
}

<head>
    <link href="~/Content/LogIn/EstiloLogin.css" rel="stylesheet" />
</head>


<body>
<div class="container">
    <div class="row">
        <div class="col-md-5 mx-auto">
            <div id="first">
                <div class="myform form ">
                    <div class="logo mb-3">
                        <div class="col-md-12 text-center">
                            <h1>Restablecer Contraseña</h1>
                        </div>
                    </div>

                    <form action="" method="post" name="Slogin">
                        <div class="form-group">
                            <input type="text" name="@Html.IdFor(model=>model.Email)" id="@Html.IdFor(model=>model.Email)" class="form-control" placeholder="Ingrese Usuario">
                            @Html.ValidationMessageFor(model => model.Email, null, new { style = "colour:red;" })
                        </div>

                           
                        <br />


                        <div class="col-md-12 text-center ">
                            <button type="submit" class=" btn btn-block mybtn btn-primary tx-tfm">Recuperar</button>
                        </div>
                        <br />

                    </form>


                </div>
            </div>
        </div>
    </div>
</div>

</body>
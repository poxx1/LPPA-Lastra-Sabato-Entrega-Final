@model MKT.Site.ViewModels.ViewModelLogIn


<head>
    <link href="~/Content/LogIn/EstiloLogin.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-5 mx-auto">
                <div id="first">
                    <div class="myform form ">
                        <div class="logo mb-3">
                            <div class="col-md-12 text-center">
                                <h1>Login</h1>
                            </div>
                        </div>
                        <form action="" method="post">


                            <div class="form-group">
                                <label for="exampleInputEmail1">Email</label>
                                <input type="text" name="@NameExtensions.IdFor(Html, model=>model.Email)" id="@NameExtensions.IdFor(Html, model=>model.Email)" class="form-control" placeholder="Ingrese Usuario">
                                @ValidationExtensions.ValidationMessageFor(Html, model => model.Email, null, new { style = "colour:red;" })

                            </div>

                            <div class="form-group">
                                <label for="exampleInputEmail1">Password</label>
                                <input type="password" name="@NameExtensions.IdFor(Html, model=>model.Password)" id="@NameExtensions.IdFor(Html, model=>model.Password)" class="form-control" placeholder="Ingrese Password">

                                @ValidationExtensions.ValidationMessageFor(Html, model => model.Password, null, new { style = "colour:red;" })

                            </div>
                            <br />


                            <div class="col-md-12 text-center ">
                                <button type="submit" class=" btn btn-block mybtn btn-primary tx-tfm">Ingresar</button>
                            </div>
                            <div class="col-md-12 ">
                                <div class="login-or">
                                    <hr class="hr-or">
                                    <span class="span-or">O</span>
                                </div>
                            </div>
                            <div class="col-md-12 mb-3">
                                <p class="text-center">
                                    <a class="google btn mybtn">
                                        <i class="fa fa-google-plus">
                                        </i> Ingresa Usando Google
                                    </a>
                                </p>
                            </div>
                            <div class="form-group">
                                <p class="text-center">¿Olvidaste la Contraseña? <a href="StartRecovery" id="signup">Recuperala Aqui</a></p>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
@model string

@{
    ViewBag.Title = "Logger";
}
<h2>Logger</h2>
<br>
<br>
<div>
    <h4>Log file:</h4>
    @using (Html.BeginForm("Index", "Logger", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {


        <div>
            @ViewData["GetStringResult"]
        </div>

        <br><br>

        <div class="col-md-10">
            <div class="input-group" style="display: flex; flex-direction: column ; ">
                <input type="file" name="log" id="logid" onchange="showpreview(this);" class="form-control" style="width: 300px;" />
                <img id="xmlpreview" style="border-width: 0px; display: none; max-width:300px;max-height:300px;" />
            </div>
        </div>
        <br><br>

        <button type="submit" class="btn btn-success">Load Log</button>
    }
</div>
@section Scripts
    {
    <script type="text/javascript">
        function showpreview(input) {
            if (input.files && input.files[0]) {

                var reader = new FileReader();
                reader.onload = function (e) {
                    $('#xmlpreview').css('display', 'initial');
                    $('#xmlpreview').attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0]);
            }

        }
    </script>
}



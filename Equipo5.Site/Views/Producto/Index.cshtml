@model IEnumerable<MKT.Entities.Models.Product>
@{ ViewBag.Title = "Index";
                Layout = "~/Views/Shared/_AdminLayout.cshtml"; }

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h2 class="text-center">Productos</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <a class="create" style="font-size: 2rem;" href="@Url.Action("Create", "Producto")">Agregar Producto</a>
        </div>
    </div>
    <br />
</div>
@Html.Hidden("hiddenIdtoDelete")
<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>Descripción</th>
                <th>Categoria</th>
                <th>Precio</th>
                <th>Stock Actual</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
<tr id="row_@item.Id">
    <td style="vertical-align: inherit;">
        @Html.DisplayFor(itemModel => item.Descripcion)
    </td>
    <td style="vertical-align: inherit;">
        @Html.DisplayFor(itemModel => item.Category.Nombre)
    </td>
    <td style="vertical-align: inherit;">
        @Html.DisplayFor(itemModel => item.Precio)
    </td>
    <td style="vertical-align: inherit;">
        @Html.DisplayFor(itemModel => item.StockActual)
    </td>
    <td class="float-right">
        <a class="btn btn-info" style="font-size: 1rem;" href="@Url.Action("Edit", "Producto", new { id = item.Id})"><i class="bi bi-pencil-square"></i></a>
        <a class="btn btn-danger" style="font-size: 1rem;" href="@Url.Action("Delete", "Producto", new { id = item.Id})"><i class="bi bi-trash"></i></a>
    </td>
</tr>            }
        </tbody>
    </table>
</div>


